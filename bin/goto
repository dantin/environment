#! /bin/bash

PS="goto"
HOME="/home/david"

# 文档部分
XINFANG_DOC="$HOME/Documents/work/peace"

# 代码
CODE="$HOME/Documents/code/projects"
FDT_CODE="$HOME/Documents/code/fangdt"

# 下载
DOWNLOAD="$HOME/Downloads"

case "$1" in
    xfdoc)
        cd $XINFANG_DOC
        ;;
    code)
        cd $CODE
        ;;
    fdtcode)
        cd $FDT_CODE
        ;;
    down)
        cd $DOWNLOAD
        ;;
    *)
        FULLPATH="~/bin/$PS"
        echo "Usage: $FULLPATH {xfdoc|code|fdtcode|down}"
        ;;
esac
